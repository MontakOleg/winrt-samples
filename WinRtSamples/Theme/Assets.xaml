<!-- Application-specific control styles -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
										xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Colors/brushes -->
	<Color x:Key="ThemePanelBackgroundColor">#cfdce9</Color>
	<Color x:Key="ThemePanelBorderColor">#B3CBD9</Color>

	<SolidColorBrush x:Key="ThemePanelBackgroundBrush"
									 Color="{StaticResource ThemePanelBackgroundColor}" />

	<SolidColorBrush x:Key="ThemePanelBorderBrush"
									 Color="{StaticResource ThemePanelBorderColor}" />


	<!-- Standard margins -->
	<Thickness x:Key="StdMarginHard">5</Thickness>
	<Thickness x:Key="StdMarginSoft">20</Thickness>
	
</ResourceDictionary>
